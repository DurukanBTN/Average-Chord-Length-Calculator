    <div>
        <button id='thousand'>Calculate The Average Length On A Unit Square With 1000 Trials (thousand) (radius = 1)</button>
        <button id='100thousand'>Calculate The Average Length On A Unit Square With 100000 (100 thousand) Trials (radius = 1)</button>
        <button id='million'>Calculate The Average Length On A Unit Square With 1000000 (million) Trials (radius = 1)</button>
    </div>
    <div>
        <button id='exit'>Exit To Main Page</button>
    </div>
    <script>
        var trial;
        function calculate() {
            var x1;
            var y1;
            var x2;
            var y2;
            var total = 0;
            var ran;
            var ran2;
            var ran3;
            var ran4;
            for (var i = 0; i < trial; i++) {
                ran = Math.ceil(Math.random() * 4);
                ran2 = Math.ceil(Math.random() * 4);
                if (ran == 1) {
                    y1 = Math.random();
                    x1 = 0;
                }
                else if (ran == 2) {
                    y1 = 1;
                    x1 = Math.random();
                }
                else if (ran == 3) {
                    y1 = Math.random();
                    x1 = 1;
                }
                else if (ran == 4) {
                    y1 = 0;
                    x1 = Math.random();
                }

                if (ran2 == 1) {
                    y2 = Math.random();
                    x2 = 0;
                }
                else if (ran2 == 2) {
                    y2 = 1;
                    x2 = Math.random();
                }
                else if (ran2 == 3) {
                    y2 = Math.random();
                    x2 = 1;
                }
                else if (ran2 == 4) {
                    y2 = 0;
                    x2 = Math.random();
                }

                total += Math.sqrt(Math.pow((x1-x2), 2) + Math.pow((y1-y2), 2));
            }
            total /= trial;
            if (trial == 1000) {
                document.getElementById('thousand').innerHTML =  'Average after 1000(thousand) trials: ' + total + ' Click To Generate Again';
            }
            else if (trial == 100000) {
                document.getElementById('100thousand').innerHTML = 'Average after 100000(100 thousand) trials: ' + total + ' Click To Generate Again';
            }
            else if (trial == 1000000) {
                document.getElementById('million').innerHTML = 'Average after 1000000(million) trials: ' + total + ' Click To Generate Again';
            }
        }
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('thousand').addEventListener('click', function() {
                trial = 1000;
                calculate();
            });
            document.getElementById('100thousand').addEventListener('click', function() {
                trial = 100000;
                calculate();
            });
            document.getElementById('million').addEventListener('click', function() {
                trial = 1000000;
                calculate();
            });
            document.getElementById('exit').addEventListener('click', function() {
                window.location.href = 'https://ide-ebaec32673104e9fa6444948c6d91b11-8080.cs50.ws/eeindex.html';
            });
        });
    </script>
